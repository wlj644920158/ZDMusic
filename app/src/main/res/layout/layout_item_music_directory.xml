<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_directory_pic"
        android:layout_width="60dp"
        android:transitionName="directoryPic"
        android:layout_height="60dp"
        android:src="@drawable/img_music_directory_avart" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_directory_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="歌单名称"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_directory_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="100首" />
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_delete_directory"
        android:src="@drawable/ic_delete_forever_black_24dp"
        android:layout_width="30dp"
        android:layout_height="30dp" />

</LinearLayout>